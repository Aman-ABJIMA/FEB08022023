@using E_Commerce.Data.Enum;
@using E_Commerce.ViewModel;
@model Product
<form asp-action="Create" method="post" enctype="multipart/form-data">
    <input type="hidden" id="Product_Id" name="Id" asp-for="Product_ID" />
    <div class="form-group">
        <labal asp-for="Product_Name">Product Name</labal>
        <input asp-for="Product_Name" class="form-control" placeholder="Product Name">
        <span asp-validation-for="Product_Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <labal asp-for="Product_Description">Description</labal>
        <input asp-for="Product_Description" class="form-control" placeholder="Description">
        <span asp-validation-for="Product_Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <labal asp-for="Product_Image">Image URL</labal>
        <input asp-for="Product_Image" class="form-control" placeholder="Image">
        <span asp-validation-for="Product_Image" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <labal asp-for="Title">Select Product Category</labal>
        <select asp-for="Product_Category" asp-items="@Html.GetEnumSelectList(typeof(ProductCategory))">
        </select>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Product_Price">INR</label>
        <input asp-for="Product_Price" type="number" placeholder="eg. 199"/>
        <span asp-validation-for="Product_Price" class="text-danger"></span>

    </div>

   
    <br />
    <button type="submit" class="btn btn-primary">Add</button>
</form>
