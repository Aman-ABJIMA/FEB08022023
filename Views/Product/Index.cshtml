
@model IEnumerable<Product>

<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top" src="@item.Product_Image" @*style="height: 225px; width: 100%; display: block;"*@>
                        <div class="card-body">
                            <p class="card-text" style="font:bold">@item.Product_Name</p>
                            <p class="card-text">@item.Product_Price INR</p>
                            <p class="card-text">@item.Product_Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                                    <button type="button" class="btn btn-sm btn-outline-secondary">Cart</button>
                                </div> 
                                <small class="text-muted" style="color:red;">SALE</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>