<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] amanzone</title>
    <link rel="icon" type="image/x-icon" href="~/css/logoAMAZON-removebg-preview.png">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/E_Commerce.styles.css" asp-append-version="true" />
</head>
<body>
    <style>
        #tab1{
            background-color: rgb(90, 167, 234);
            width: 100%;
            height: 67px;
            color: white;
            margin-top: -8px;
            /* margin-left: -8px; */
            font-size: 20px;
            border-color: inherit;
            border-style: solid;
            border-width: 0px;
            /* size: landscape; */
        }

        table {
            text-align: center;
        }

        #tab2 {
            width: 100%;
            height: 67px;
        }
        #e1:hover, #e2:hover, #e3:hover, #e4:hover{
            color:darkgray;
        }

        #search {
            margin-left: 20px;
            width: 346px;
            height: 40px;
            font-weight: bold;
            /* padding: 5px; */
            border-radius: 2%;
            border: aqua;
            margin-right: 220px;
        }

        #sale {
            width: 100%;
            background-color: rgb(22, 24, 27);
        }

        .footer {
            background-color: rgb(90, 167, 234);
            text-align: center;
            font-weight: bold;
            color: white;
            font-size: 20px;
        }
        body{
            background-color:aliceblue;
        }

        .dropdown1 , .dropdown2 , .dropdown3 , .dropdown4{
            position:relative;
            display:inline-block
        }
       .dropdown1 #dropdown-content, .dropdown2 #dropdown-content, .dropdown3 #dropdown-content, .dropdown4 #dropdown-content{
            display:none;
            position:absolute;
            background-color:#f9f9f9;
            min-width:160px;
            box-shadow:0px 8px 16px 0px rgba(0,0,0,0.2);
            padding: 12px 16px;
        }

            .dropdown1:hover #dropdown-content, .dropdown2:hover #dropdown-content, .dropdown3:hover #dropdown-content , .dropdown4:hover #dropdown-content {
            display:block;
        }

    </style>
    <table id="tab1">
        <tr style="padding:15px; padding-inline:61px;">
            <th><img src="~/css/logoAMAZON-removebg-preview.png" alt="logo" width="75%"></th>
            <th>amanzone.com</th>
            <th><input type="text" placeholder="Search products, brands and more..." id="search"></th>
            <th style="width: 438px;"><a style="text-decoration:none;color:white;" asp-controller="Login">Login&Signup</a></th>
            <th>About</th>
            <th><img src="~/css/cart.png" alt="Cart" width="20%"></th>
        </tr>
    </table>

    <table id="tab2">
        <tr>

            <th width="12%">
                 <div class="dropdown1">
                   <span id="e1">Electronics</span>
                        <div id="dropdown-content">
                         <p>Mobiles</p>
                         <p>Laptop</p>
                         <p>Friedge</p>
                         <p>Charger</p>
                        </div>
                 </div>
            </th>

            <th width="12%">
       
                 <div class="dropdown2">
                    <span id="e2">TV&Appliances</span>
                        <div id="dropdown-content">
                         <p>Android TV</p>
                         <p>FireTV Stick</p>
                         <p>HDMI Cable</p>
                         <p>USB Hub</p>
                        </div>
                 </div>
            </th>
          
            
            <th width="12%">
                
                <div class="dropdown3">
                    <span id="e3">Men</span>
                        <div id="dropdown-content">
                         <p>UpperWears</p>
                         <p>Pants&Trousers</p>
                         <p>T-Shirts&Shirts</p>
                         <p>Accessories</p>
                        </div>
                 </div>
                
            </th>
            <th width="12%">
                <div class="dropdown4">
                    <span id="e4">Women</span>
                    <div id="dropdown-content">
                        <p>MakeupKits</p>
                        <p>Sarees&Shouts</p>
                        <p>Sandle&Shoues</p>
                        <p>Accessories</p>
                    </div>
                </div>
                
            </th>
            <th>Baby&Kids</th>
            <th>Home&Furniture</th>
            <th>Sports,Books&More</th>
        </tr>
    </table>
 
   


